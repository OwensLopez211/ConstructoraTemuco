# .env - Configuración Frontend para Producción

# URL de tu API de Laravel en producción
VITE_API_URL=http://ctemuco.cl/api

# URL base del backend (para imágenes y archivos)
VITE_APP_URL=http://ctemuco.cl

# Nombre de la aplicación
VITE_APP_NAME=Constructora Temuco

# Ambiente (cambiar a production para build final)
VITE_APP_ENV=production

# Configuración para Laravel Sanctum (dominios permitidos)
VITE_SANCTUM_STATEFUL_DOMAINS=ctemuco.cl,www.ctemuco.cl,108.167.149.245

# Debug mode (false para producción)
VITE_APP_DEBUG=true

# URL del frontend en producción
VITE_FRONTEND_URL=https://ctemuco.cl

# Configuración adicional para tu hosting
VITE_API_TIMEOUT=30000
VITE_MAX_FILE_SIZE=5242880

# Configuración de imágenes (coincide con tu backend)
VITE_MAX_IMAGE_SIZE=5120
VITE_ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
VITE_IMAGE_QUALITY=80