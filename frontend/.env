# .env - Configuración Frontend para Laravel Backend

# URL de tu API de Laravel (ajusta según tu configuración)
VITE_API_URL=http://localhost:8000/api

# URL base del backend (para imágenes y archivos)
VITE_APP_URL=http://localhost:8000

# Nombre de la aplicación
VITE_APP_NAME=Constructora Temuco

# Ambiente
VITE_APP_ENV=development

# Configuración para Laravel Sanctum
# Asegurate de que coincida con tu configuración de Laravel
VITE_SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# Debug mode
VITE_APP_DEBUG=true

# Configuración adicional para CORS
VITE_FRONTEND_URL=http://localhost:3000